<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">金额</view>
    <input name="amount" placeholder="请输入金额" />
  </view>
  <view class="section">
    <view class="section__title">原因{{nickName}}</view>
    <textarea name="reason" placeholder="请输入原因" />
  </view>
  <view class="btn-area">
    <button class="btn-submit" form-type="submit">确定</button>
  </view>
</form>