page {
  background: #f6f6f6;
}
.section {
  margin-top: 60rpx;
}
.section .section__title {
 color: #666;
 margin-left: 20rpx;
}
.section input, .section textarea {
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  padding: 20rpx;
}
.section input {
  height: 90rpx;
}
.section textarea {
  height: 200rpx;
}
.btn-area {
  padding: 20rpx;
  margin-top: 30rpx;
}
.btn-submit {
  background: #07c160;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  color: #fff;
}